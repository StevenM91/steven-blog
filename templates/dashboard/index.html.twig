{% extends 'base.html.twig' %}

{% block title %}
  Dashboard
{% endblock %}

{% block body %}
  <section>
    <h1 class="text-center text-muted">
      Bienvenue
      <strong class="text-dark">
        {{ app.user.lastname }}
        {{ app.user.firstname }}
      </strong>
    </h1><br />
    <h5 class="text-center text-muted">Vous etes administrateur</h5>

    <hr />
    <h3>Mes membres</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nom</th>
          <th scope="col">Pr√©nom</th>
          <th scope="col">Email</th>
          <th scope="col">Inscription</th>
