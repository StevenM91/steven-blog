            <td>
              {# {% if app.user and app.user.fullname == singleUser.id %} #}
              <a class="btn btn-danger m-2" href="{{ path('app_remove_user') }}" data-bs-toggle="modal" data-bs-target="#exampleModal">Supprimer</a> | <a class="btn btn-warning m-2" href="">Modifier</a>
              {# {% endif %} #}
